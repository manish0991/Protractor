<h1>Listing articles</h1>

<table class="table">
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="3"></th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Show', article_path(article), class: 'btn btn-primary' %></td>
      
      <% if @show_update %>
        <td><%= link_to 'Edit', edit_article_path(article), class: 'btn btn-success' %></td>
      <% end %>

      <% if @show_destroy %>
        <td><%= link_to 'Destroy', article_path(article), 
                class: 'btn btn-danger',
                method: :delete,
                data: { confirm: 'Are you sure?' } %></td>
       <% end %>

    </tr>
  <% end %>

  <tr>
  </tr>

</table>

<%= link_to 'Add Article', new_article_path(), class: 'btn btn-success' %>


